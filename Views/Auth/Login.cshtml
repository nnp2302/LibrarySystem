@model LibrarySystem.Models.LoginViewModel
@{
    Layout = "_Layout_Auth";
}
<div class="container position-sticky z-index-sticky top-0">
    <div class="row">
        <div class="col-12">
        </div>
    </div>
</div>
<main class="main-content  mt-0">
    <section>
        <div class="page-header min-vh-75">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-4 col-lg-5 col-md-6 d-flex flex-column mx-auto">
                        <div class="card card-plain mt-8">
                            <div class="card-header pb-0 text-left bg-transparent">
                                <h3 class="font-weight-bolder text-info text-gradient">Đăng nhập thư viện</h3>
                                <p class="mb-0">Điền tài khoản và mật khẩu để đăng nhập</p>
                            </div>
                            <div class="card-body">
                                <form asp-action="Login" method="post" role="form">
                                    <label @*asp-for="Username"*@>Tài khoản</label>
                                    <div class="mb-3">
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Nhập tài khoản ở đây" aria-label="Tài khoản" aria-describedby="email-addon">
                                    </div>
                                    <label asp-for="Pass">Mật khẩu</label>
                                    <div class="mb-3">
                                        <input asp-for="Pass" type="text" class="form-control" placeholder="Nhập mật khẩu ở đây" aria-label="Mật khẩu" aria-describedby="password-addon">
                                    </div>
                                    <div class="form-check form-switch">
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe" checked="">
                                        <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Ghi nhớ</label>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Đăng nhập</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="oblique position-absolute top-0 h-100 d-md-block d-none me-n8">
                            <div class="oblique-image bg-cover position-absolute fixed-top ms-auto h-100 z-index-0 ms-n6" style="background-image:url('../assets/img/curved-images/curved6.jpg')"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>